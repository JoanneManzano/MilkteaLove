<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BubbleTeaActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/maroon"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flavors"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/leaf2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTeaTypeFlavor"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:background="@drawable/banners"
            android:gravity="center"
            android:text="Tea Type"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:background="@drawable/logobg"
            android:elevation="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <LinearLayout
                android:id="@+id/Mocha"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/whitebg"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/leaf1" />

                <TextView
                    android:id="@+id/flvr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flavor 1"
                    android:textColor="@color/maroon"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/House"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/whitebg"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/leaf1" />

                <TextView
                    android:id="@+id/flvr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flavor 2"
                    android:textColor="@color/maroon"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Grass"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/whitebg"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/leaf1" />

                <TextView
                    android:id="@+id/flvr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flavor 3"
                    android:textColor="@color/maroon"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Almond"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/whitebg"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/leaf1" />

                <TextView
                    android:id="@+id/flvr4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flavor 4"
                    android:textColor="@color/maroon"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cream"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/whitebg"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/leaf1" />

                <TextView
                    android:id="@+id/flvr5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flavor 5"
                    android:textColor="@color/maroon"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>